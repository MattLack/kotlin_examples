<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:id="@+id/gbpText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="GBP: "
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/usdText" android:layout_marginBottom="138dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="67dp" android:layout_marginEnd="67dp"/>

    <TextView
            android:id="@+id/usdText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="USD: "
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/brlText" android:layout_marginBottom="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/gbpText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp" android:layout_marginEnd="67dp"/>

    <TextView
            android:id="@+id/brlText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="BRL: "
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/usdText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp" android:layout_marginEnd="67dp"/>

    <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="get"
            android:text="Obter cotação de 1 EUR"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/brlText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" android:layout_marginEnd="70dp"/>

</android.support.constraint.ConstraintLayout>